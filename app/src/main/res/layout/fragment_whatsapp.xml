<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WhatsappFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/ivAtasWAFrag"
        android:layout_width="wrap_content"
        android:layout_height="186dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/atas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-110dp" />

    <TextView
        android:id="@+id/textTitleFragWA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="188dp"
        android:fontFamily="@font/googlesans_regular"
        android:text="Implicit Intent"
        android:textColor="@color/atasBawah"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitleFragWA2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/googlesans_bold"
        android:text="Whatsapp Send Message"
        android:textColor="@color/atasBawah"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textTitleFragWA" />

    <EditText
        android:id="@+id/etWAFragName"
        android:layout_width="257dp"
        android:layout_height="33dp"
        android:layout_marginTop="36dp"
        android:background="#FFFFFF"
        android:hint="Input no tujuan"
        android:inputType="number"
        android:outlineSpotShadowColor="#000000"
        android:textColor="#000"
        android:textColorHint="#A59F9F"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/textTitleFragWA2"
        app:layout_constraintTop_toBottomOf="@id/textTitleFragWA2" />

    <EditText
        android:id="@+id/etFragWAUmur"
        android:layout_width="258dp"
        android:layout_height="128dp"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:hint="Teks pesan"
        android:inputType="text|none"
        android:outlineSpotShadowColor="#000000"
        android:textColor="#000"
        android:textColorHint="#A59F9F"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/textTitleFragWA2"
        app:layout_constraintTop_toBottomOf="@id/etWAFragName" />

    <Button
        android:id="@+id/btnNextFragWA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Kirim via Whatsapp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/etFragWAUmur"
        app:layout_constraintTop_toBottomOf="@+id/etFragWAUmur" />

</androidx.constraintlayout.widget.ConstraintLayout>
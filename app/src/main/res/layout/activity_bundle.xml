<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BundleActivity">

    <TextView
        android:id="@+id/textTitleBundle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/googlesans_regular"
        android:text="Explicit Intent"
        android:textColor="@color/atasBawah"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitleBundle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/googlesans_bold"
        android:text="Bundle"
        android:textColor="@color/atasBawah"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textTitleBundle" />

    <TextView
        android:id="@+id/tvNamaBundle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/googlesans_medium"
        android:text="Nama"
        android:textColor="#00695C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/textTitleBundle2"
        app:layout_constraintTop_toTopOf="@id/textTitleBundle2" />

    <TextView
        android:id="@+id/tvUmurBundle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/googlesans_medium"
        android:text="Umur"
        android:textColor="#00695C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/textTitleBundle2"
        app:layout_constraintTop_toTopOf="@id/tvNamaBundle" />

    <Button
        android:id="@+id/btnBackBundle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Back"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/tvUmurBundle"
        app:layout_constraintTop_toBottomOf="@+id/tvUmurBundle" />

    <ImageView
        android:id="@+id/ivBundleBawah"
        android:layout_width="wrap_content"
        android:layout_height="186dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bawah"
        tools:layout_editor_absoluteY="536dp" />

    <ImageView
        android:id="@+id/ivBundleAtas"
        android:layout_width="wrap_content"
        android:layout_height="186dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/atas"
        tools:layout_editor_absoluteY="-84dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SerializableActivity">

    <TextView
        android:id="@+id/textTitleSerial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/googlesans_regular"
        android:text="Explicit Intent"
        android:textColor="@color/atasBawah"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitleSeriall2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/googlesans_bold"
        android:text="Serializable"
        android:textColor="@color/atasBawah"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textTitleSerial" />

    <TextView
        android:id="@+id/tvNamaSerial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/googlesans_medium"
        android:text="Nama"
        android:textColor="#00695C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/textTitleSeriall2"
        app:layout_constraintTop_toTopOf="@id/textTitleSeriall2" />

    <TextView
        android:id="@+id/tvUmurSerial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/googlesans_medium"
        android:text="Umur"
        android:textColor="#00695C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/textTitleSeriall2"
        app:layout_constraintTop_toTopOf="@id/tvNamaSerial" />

    <Button
        android:id="@+id/btnBackSerial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Back"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/tvUmurSerial"
        app:layout_constraintTop_toBottomOf="@+id/tvUmurSerial" />

    <ImageView
        android:id="@+id/ivSerialBawah"
        android:layout_width="wrap_content"
        android:layout_height="186dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bawah"
        tools:layout_editor_absoluteY="536dp" />

    <ImageView
        android:id="@+id/ivSerialAtas"
        android:layout_width="wrap_content"
        android:layout_height="186dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/atas"
        tools:layout_editor_absoluteY="-84dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SerializableFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/ivAtasSerialFrag"
        android:layout_width="wrap_content"
        android:layout_height="186dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/atas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-110dp" />

    <TextView
        android:id="@+id/textTitleFragSerial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="188dp"
        android:fontFamily="@font/googlesans_regular"
        android:text="Explicit Intent"
        android:textColor="@color/atasBawah"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitleFragSerial2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/googlesans_bold"
        android:text="Serializable"
        android:textColor="@color/atasBawah"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textTitleFragSerial" />

    <EditText
        android:id="@+id/etSerialFragName"
        android:layout_width="257dp"
        android:layout_height="33dp"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:hint="Input Nama"
        android:inputType="text|none"
        android:outlineSpotShadowColor="#000000"
        android:textColor="#000"
        android:textColorHint="#A59F9F"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/textTitleFragSerial2"
        app:layout_constraintTop_toBottomOf="@id/textTitleFragSerial2" />

    <EditText
        android:id="@+id/etFragSeriallUmur"
        android:layout_width="257dp"
        android:layout_height="33dp"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:hint="Umur Nama"
        android:inputType="text|none"
        android:outlineSpotShadowColor="#000000"
        android:textColor="#000"
        android:textColorHint="#A59F9F"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/textTitleFragSerial2"
        app:layout_constraintTop_toBottomOf="@id/etSerialFragName" />

    <Button
        android:id="@+id/btnNextFragSerial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Next"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/etFragSeriallUmur"
        app:layout_constraintTop_toBottomOf="@+id/etFragSeriallUmur" />

</androidx.constraintlayout.widget.ConstraintLayout>